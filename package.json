{
	"name": "harmony",
	"version": "1.0.0",
	"description": "A Discord bot for verifying users.",
	"main": "index.ts",
	"scripts": {
		"createstate": "ts-node -r dotenv/config scripts/createstate.ts",
		"deletestate": "ts-node -r dotenv/config scripts/deletestate.ts",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prelint": "npm run createstate -- --temp",
		"lint": "eslint ./src/ --ext .ts",
		"postlint": "npm run deletestate -- --temp",
		"start": "node ./dist/index.js",
		"dev": "./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"tsc && node -r dotenv/config ./dist/index.js\"",
		"prebuild": "npm run createstate",
		"build": "tsc",
		"watch": "tsc --watch",
		"bs": "npm run build && node -r dotenv/config ./dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/datasektionen/harmony.git"
	},
	"keywords": [
		"discord",
		"bot",
		"verification",
		"security",
		"email"
	],
	"engines": {
		"npm": ">=8.15.0",
		"node": ">=18.0.0"
	},
	"author": "GÃ¡bor Nagy",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/datasektionen/harmony/issues"
	},
	"homepage": "https://github.com/datasektionen/harmony#readme",
	"devDependencies": {
		"@types/keyv": "^3.1.4",
		"@types/node": "^17.0.45",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@types/luxon": "^3.2.0",
		"discord.js": "^14.5.0",
		"keyv": "^4.5.0",
		"luxon": "^3.2.0",
		"zod": "^3.21.4"
	}
}
